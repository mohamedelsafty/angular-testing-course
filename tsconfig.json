{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom",
      "ES2017.object"
    ]
  },
  "include": ["src/**/*.spec.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "./cypress.config.ts"]
}
